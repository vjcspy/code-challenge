# =============================================================================
# Development Dockerfile for Token Price API
# Supports hot-reload with ts-node-dev and file polling for Docker volumes
# =============================================================================

FROM node:20-alpine

WORKDIR /app

# Install required system dependencies
RUN apk add --no-cache curl

# Copy package files first (for better caching)
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy Prisma schema
COPY prisma ./prisma/

# Generate Prisma client
RUN npx prisma generate

# Copy remaining source code
COPY . .

# Create non-root user for security (optional in dev)
# RUN addgroup -S appgroup && adduser -S appuser -G appgroup
# USER appuser

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Default command (can be overridden in docker-compose)
# Using --poll for Docker volume file watching
CMD ["npm", "run", "dev:local"]

