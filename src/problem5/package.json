{
  "name": "token-price-api",
  "version": "1.0.0",
  "description": "Token Price CRUD Backend with ExpressJS, Prisma, and Kong Gateway",
  "main": "dist/index.js",
  "scripts": {
    "dev": "./scripts/dev-compose.sh up",
    "dev:local": "ts-node-dev --respawn --transpile-only --poll src/index.ts",
    "dev:down": "./scripts/dev-compose.sh down",
    "dev:logs": "./scripts/dev-compose.sh logs",
    "dev:clean": "./scripts/dev-compose.sh clean",
    "dev:status": "./scripts/dev-compose.sh status",
    "dev:shell": "./scripts/dev-compose.sh shell",
    "dev:tilt": "./scripts/setup.sh",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "./scripts/dev-compose.sh prisma studio",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:e2e": "./scripts/test.sh",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "node-cron": "^3.0.3",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "uuid": "^11.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nock": "^14.0.1",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.2.1",
    "supertest": "^7.0.0",
    "testcontainers": "^10.16.0",
    "@testcontainers/postgresql": "^10.16.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

